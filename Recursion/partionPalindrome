class Solution {
public:
    // Function to check if a substring is a palindrome ğŸª
    bool isPalindrome(string s, int start, int end) {
        while (start <= end) { // Two-pointer approach ğŸ”
            if (s[start++] != s[end--]) { // If characters donâ€™t match, itâ€™s NOT a palindrome ğŸš«
                return false;
            }
        }
        return true; // Itâ€™s a palindrome! ğŸ¥³
    }

    // Function to generate all palindrome partitions ğŸ§©
    void palindromCombination(int idx, string s, vector<vector<string>>& ans, 
                              vector<string>& ds) {
        if (idx == s.size()) { // Base Case: Reached the end of the string ğŸ¯
            ans.push_back(ds); // Add the current partition to the result ğŸ“¦
            return;
        }
        for (int i = idx; i < s.size(); i++) { // Try every possible cut âœ‚ï¸
            if (isPalindrome(s, idx, i)) { // Check if the substring is a palindrome ğŸª
                ds.push_back(s.substr(idx, i - idx + 1)); // Add the substring to the current partition âœ…
                palindromCombination(i + 1, s, ans, ds); // Recursively process the rest of the string ğŸ”„
                ds.pop_back(); // Backtrack to explore other possibilities ğŸ”™ğŸŒ€
            }
        }
    }

    // Main function to return all partitions ğŸ¯
    vector<vector<string>> partition(string s) {
        vector<vector<string>> ans; // To store all valid partitions ğŸ—‚ï¸
        vector<string> ds; // Current partition being built ğŸ§©
        palindromCombination(0, s, ans, ds); // Start the backtracking adventure ğŸš€
        return ans; // Return the result ğŸŒŸ
    }
};
